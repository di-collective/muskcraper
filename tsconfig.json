{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        // "paths": {
        //     "@/*": [
        //         "./src/*"
        //     ]
        // }
    },
    "lib": [
        "ES2022"
    ],
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/dist"
    ]
}